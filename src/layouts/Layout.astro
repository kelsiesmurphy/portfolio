---
import Header from "../components/Header.astro";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";

import "@/styles/tailwind.css";
import "@/styles/post.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!doctype html>
<html lang="en">
	<SEOTags {...headTags} />
	<body
		class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-neutral-200 px-10 py-8 text-sm text-neutral-700 md:gap-20 md:py-16"
	>
		<Header />
		<slot />
	</body>
</html>
